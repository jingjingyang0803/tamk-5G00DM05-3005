-- File: 075-example-select.sql

SELECT  deptno
        , ename
        , sal
        , hiredate
FROM    emp
WHERE   ( deptno = 10
          OR
          deptno = 20 )
        AND
        ( LOWER(job) = 'salesman'
          OR
          LOWER(job) = 'manager' )
ORDER BY deptno ASC
         , ename ASC
;

-- End of file
